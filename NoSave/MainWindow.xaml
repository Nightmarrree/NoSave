<Window x:Class="NoSave.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoSave"
        mc:Ignorable="d"
        Title="NoSave"
        Height="43"
        Width="100"
        Topmost="True"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#FF242424">
    <Grid>
        <Grid Margin="0,0,0,0"
              Height="13"
              Background="#FF1E1E1E"
              MouseDown="DragWindow"
              VerticalAlignment="Top">
            <TextBlock x:Name="InfoText"
                       Text="?"
                       HorizontalAlignment="Left"
                       Foreground="White"
                       FontFamily="Arial"
                       FontSize="10"
                       FontWeight="Bold"
                       Cursor="Help"
                       Background="#00000000"
                       TextAlignment="Center"
                       Width="20"
                       ToolTipService.InitialShowDelay="500"
                       Padding="1,1,1,0">
                <TextBlock.ToolTip>
                    <ToolTip Background="#333333"
                             Foreground="White"
                             FontFamily="Yu Gothic UI"
                             FontSize="12">
                        <StackPanel>
                            <TextBlock x:Name="VersionInfoBlock"
                                       TextWrapping="Wrap"
                                       HorizontalAlignment="Left" />
                            <TextBlock Text="Developed by レイちゃん"
                                       TextWrapping="Wrap"
                                       HorizontalAlignment="Left" />
                            <TextBlock Text="For M310-Club"
                                       TextWrapping="Wrap"
                                       HorizontalAlignment="Left" />
                        </StackPanel>
                    </ToolTip>
                </TextBlock.ToolTip>
            </TextBlock>

            <Button Style="{DynamicResource HelpButtons}"
                    Content="✕"
                    Foreground="White"
                    FontFamily="Arial"
                    FontSize="8"
                    Width="26"
                    Padding="1,1,2,0"
                    HorizontalAlignment="Right"
                    Click="ExitButton_Click" />
            <Button Style="{DynamicResource HelpButtons}"
                    Content="—"
                    HorizontalAlignment="Right"
                    Foreground="White"
                    FontFamily="Arial"
                    FontWeight="Bold"
                    FontSize="6"
                    Width="26"
                    Margin="0,0,26,0"
                    Padding="1,1,2,0"
                    Click="MinimizeButton_Click" />
            
            <Label x:Name="VersionLabel"
                   HorizontalAlignment="Left"
                   Margin="20,0,0,0"
                   Cursor=""
                   Foreground="#FFADB2B5"
                   FontSize="8"
                   Padding="0,1,0,0"
                   IsHitTestVisible="False"
                   Visibility="Hidden" />
        </Grid>
        <Frame x:Name="MainFrame"
               VerticalAlignment="Bottom"
               Height="30.5" />
        <Rectangle HorizontalAlignment="Center"
                   Height="{Binding ElementName=WindowBorder, Path=Height}"
                   Stroke="{Binding ElementName=WindowBorder, Path=Stroke}"
                   VerticalAlignment="Center"
                   Width="{Binding ElementName=WindowBorder, Path=Width}"
                   RenderTransformOrigin="0.5,0.5"
                   IsEnabled="False"
                   RadiusX="5"
                   RadiusY="5"
                   Visibility="{Binding ElementName=WindowBorder, Path=Visibility}"
                   StrokeThickness="{Binding ElementName=WindowBorder, Path=StrokeThickness}"
                   IsHitTestVisible="False" />

        <Rectangle x:Name="WindowBorder"
                   Stroke="#FFADB2B5"
                   RenderTransformOrigin="0.5,0.5"
                   RadiusX="6"
                   RadiusY="6"
                   StrokeThickness="1"
                   IsEnabled="False"
                   Visibility="Visible"
                   Width="100"
                   Height="43"
                   IsHitTestVisible="False" />
    </Grid>
    <Window.Clip>
        <RectangleGeometry Rect="0,0,100,43"
                           RadiusX="6"
                           RadiusY="6" />
    </Window.Clip>
</Window>